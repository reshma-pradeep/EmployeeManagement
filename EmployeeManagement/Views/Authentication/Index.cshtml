@model EmployeeManagement.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Index";
}

<div class="col-sm-4"></div>

<div class="col-sm-4 well" style="margin-top:100px">

    @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
    {
        <div class="form-group">
            <center><img src="/Images/mylogo.jpg" height="150" width="150" /></center>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username" })
            <br />
            @Html.PasswordFor(n => n.Password, new { @class = "form-control", @placeholder = "Password" })
        </div>

        <input class="btn btn-primary form-control" type="submit" name="login" value="Login" />
    }
    @Html.ValidationMessage("CredentialError", new { style = "color:red;" })

</div>

<div class="col-sm-4"></div>
